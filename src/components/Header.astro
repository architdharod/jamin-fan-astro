---
import HeaderLink from './HeaderLink.astro';
import { getCollection } from 'astro:content';

const proj = await getCollection('projects');

---

<header>
	<nav>
		{proj.map(element =>(
			<HeaderLink 
				href={`/project/`+ element.slug}>{element.data.title}
			</HeaderLink>
		))}
	</nav>
</header>

<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
